:ruby
  enable_save_settings ||= false
  nav ||= ''

.navbar.navbar-default.navbar-fixed-top(role="navigation")
  .container
    .navbar-header
      %button.navbar-toggle(type="button")
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand(href="#" data-move-to="top") Narou.rb WEB UI
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{ class: ("active" if nav == "settings") }
          %a(href="/settings") 環境設定
        %li{ class: ("active" if nav == "help") }
          %a(href="/help") ヘルプ
        %li
          %a(href="/") 戻る
      - if enable_save_settings
        .navbar-form.navbar-left
          %input.btn.btn-info(type="submit" value="設定を保存" style="margin-left: 50px")
          %button#btn-reboot.btn.btn-default サーバを再起動
      = partial :queue
